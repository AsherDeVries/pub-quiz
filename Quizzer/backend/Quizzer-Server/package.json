{
  "name": "quizzer-server",
  "version": "0.0.1",
  "description": "The Quizzer server which keeps hold of the current quiz session. It keeps every sub application up to date with the quiz session's current data.",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test nyc mocha --compilers js:babel-core/register test/**/*.js"
  },
  "author": "Wessel Hendriks",
  "contributors": [
    "Asher de Vries",
    "Nick van der Burg",
    "Wessel Hendriks"
  ],
  "license": "ISC",
  "repository": "git@github.com:HANICA-DWA/fall2017-quizz-NickEnWessel.git",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "mongodb": "^2.2.33",
    "mongoose": "^4.12.4",
    "mongoose-simple-random": "^0.4.1",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.9.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.1",
    "eslint": "^4.9.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "supertest": "^3.0.0"
  },
  "main": "dist",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
